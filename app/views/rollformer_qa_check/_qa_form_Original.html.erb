<% @page_title = 'Roll Former QA Check' %>
<% @previous_controller = 'rollform_production' %>
<% @previous_action = 'index' %>
<% @trans_code = 'RLF' %>
<% @page_module = 'qa' %>
<% @page_sub_module = 'rollform_qa' %>
<% @page_access = 'rollform_qa_edit' %>

<table align=center summary="Profile QA Check" style = "background-color: #F5F5F5">
  <tr>
  	<td rowspan = '6' align = 'left', style = "background-color: #F5F5F5">O<br>P<br>E<br>R<br>A<br>T<br>O<br>R</td>
  	<td rowspan = '6'><%= image_tag ("KnockoutImg.png") %></td>
  	<td rowspan = '6' align = 'right' style = "background-color: #F5F5F5">D<br>R<br>I<br>V<br>E</td>
  	<td rowspan = '6' width = "2" style = "background-color: #F5F5F5"></td>
  	<td style = "background-color: #F5F5F5"><%= f.label(:pwo_header_id, "Work Order:")%></td>
    <td>
      <%= f.select :header_id, options_for_select(@pwo.collect { |workord| [workord.pwo_worderno, workord.id] }, 1), {} , { id: 'headers_select' } %>
    </td>
    <td style = "background-color: #F5F5F5"><%= f.label(:item_number, "Profile:") %></td>
    <td>
      <%= f.select :member_id, options_for_select(@profiles.collect { |pwo_lines| [pwo_lines.item_number, pwo_lines.id] } ,0), {}, { id: 'profiles_select' } %>
    </td>
  </tr>
  <tr>
  	<td style = "background-color: #F5F5F5"><%= f.label(:piecemark,"Piecemark:")%></td>
  	<td>
       <%= f.select :pcemark_id, options_for_select(@pcemarks.collect { |pce_marks| [pce_marks.piecemark, pce_marks.id] } ,0), {}, { id: 'pcemarks_select' } %>
    </td>  	
    <td style = "background-color: #F5F5F5"><%= f.label(:required_length, "Req. Length:") %></td>
    <td><%= f.text_field(:required_length)%></td>
  </tr>  
    <td style = "background-color: #F5F5F5"><%= f.label(:hole_center_width_A, "Dimension A:") %></td>
    <td><%= f.text_field(:hole_center_width_A,) %></td>
    <td style = "background-color: #F5F5F5"><%= f.label(:hole_center_width_B, "Dimension B:") %></td>
    <td><%= f.text_field(:hole_center_width_B,) %></td> 
  </tr>
  <tr>
  	<td><%= f.label(:flange_C, "Dimension C:") %></td>
  	<td><%= f.text_field(:flange_C) %></td>
  	<td><%= f.label(:web_D, "Dimension D:") %></td>
  	<td><%= f.text_field(:web_D) %></td>
  </tr>
  <tr>
  	<td><%= f.label(:flange_E, "Dimension E:") %></td>
  	<td><%= f.text_field(:flange_E) %></td>
  	<td><%= f.label(:return_F, "Thickness:") %></td>
  	<td><%= f.text_field(:return_F) %></td>
  </tr>
  <tr>
  	<td>Visual Checks:</td>
  	<td>Bowing, Twisitng, Knotching<br>Bending, Crushing, Other</td>
  	<td><%= f.label(:actual_length, "Actual Length:") %></td>
  	<td><%= f.text_field(:actual_length) %></td>
  </tr>	
  <tr>
  <td style = "background-color: #F5F5F5">&nbsp;</td>	
  <td><%= image_tag("StudCrossSection.png") %> </td>
  <td style = "background-color: #F5F5F5">&nbsp;</td>
  <td style = "background-color: #F5F5F5">&nbsp;</td> 
  <td><%= f.label(:meets_visual, "Meets Visual Spec:")%></td>
  <td><%= f.check_box(:meets_visual)%></td>
  <td><%= f.label(:user_notes, "Notes:") %></td>
  <td><%= f.text_area(:user_notes)%></td>
  <%= f.hidden_field :trans_code, :value => @trans_code %>
</tr>
</table>