<table width = "100%"> 
<tr>
<td width = "33%" align = "left">
</td>
<td width = "33%" align = "center">
  <h2>Scan Panel</h2>
 </td>
<td width = "33%" align = "right">
 <%= if @trans_code == 'STH' then
         link_to image_tag('calculator40.png'), :controller => 'wallpanel_tracking', :action => 'send_sth_notification'
       end %> 
</td>  
</tr>
</table>
<div class="panel tracking new">
  <%= form_for(@panel, :url => {:action => 'create'}) do |f| %>
    <%= render(:partial => "scan_panel", :locals => {:f => f}) %>
    <br>
    <div class="form-buttons">
      <%= submit_tag("Submit Panel") %> 
    </div>

<br />
  <table width="100%">
   <tr>
    <td width="33%" align="left">
        <%= link_to image_tag('button_Scanned_Panels.png'), :action => 'show', :method => 'get', :target => "_blank",:transcode => @trans_code %>
    </td>
    <td width="33%" align="center">
       
    </td>
    <td width="33%" align="right">
    <%= 
    if @trans_code == 'VRS' then 
        link_to image_tag('button_Send_Message.png'), :controller => 'wallpanel_tracking', :action => 'send_vrs_notification'
    elsif @trans_code == 'OPA' then
        link_to image_tag('button_Send_Message.png'), :controller => 'wallpanel_tracking', :action => 'send_opa_notification'
    elsif @trans_code == 'NCN' then
        link_to image_tag('button_Send_Message.png'), :controller => 'wallpanel_tracking', :action => 'send_ncn_notification'
    elsif @trans_code == 'STH' then
        link_to image_tag('button_Send_Message.png'), :controller => 'wallpanel_tracking', :action => 'send_sth_notification'
        end %>
  </td>
 </tr> 
<% end %>
</table>
</div>
